

<div class="banner" style="background-image: url('http://www.lejulesverne-paris.com/sites/default/files/covers/dinner-cover-2-en.jpg');">
  <div class="banner-content">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <!-- <div class="banner-text">

    </div> -->
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-4 col-sm-offset-4">
          <div class="form-login">
            <div class="form-header">
              <%= cl_image_tag("Logo_pmqvoh.jpg", :height=>150, :width=>150, :crop=>"scale") %>
             <!--  <h2>Login</h2> -->

            </div>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email, required: false, autofocus: true %>
                <%= f.input :password, required: false %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Log in", class: "btn btn-primary" %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
