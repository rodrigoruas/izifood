
<div class="banner-home" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,0,0,0.6) 50%), url('https://www.eatingthaifood.com/wp-content/uploads/2016/12/best-thai-restaurants-in-bangkok-2016.jpg');">
  <div class="banner-content">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div class="banner-text">
      <h1>Em Breve</h1>
    </div>
  </div>
</div>

<div class="restaurants-cards">
  <div class="container">
    <div class="row">
      <% @restaurants.each do |rest| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= rest.photo %>);">

            <div class="card-description">
              <h2><%= rest.name  %></h2>
              <p><%= rest.address %></p>
            </div>

            <a class="card-link" href="#" ></a>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
